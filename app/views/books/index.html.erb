



<div clas="new-heading"><h2>New Book</h2></div>


  <% if @book.errors.any? %>
  <%= @book.errors.count %>件のerrorが発生しました</br>
  <% @book.errors.full_messages.each do |message| %>
    <%= message %></br>
  <% end %>
  <% end %>
<div class="box">

  <%= form_with model:@book,local:true do |f| %>


  <p class="box-title">Title</p>
  <%= f.text_field :title %>
  <p class="box-title">Body</p>
  <%= f.text_area :body %>
  <div class="submit-box">
  <%= f.submit "Create Book"%>
  </div>
  <% end %>



</div>
 <h1>Books</h1>
 <table>
   <thead>
    <tr>
    <th>Title</th>
    <th>Body</th>
    <th colspan="3"></th>
    </tr>
   </thead>
<tbody>
   <% @books.each do |book|%>
 <tr>
     <td><%= book.title %></td>
     <td><%= book.body %></td>
     <td><%= link_to("Show",book_path(book))%></td>
     <td><%= link_to("Edit",edit_book_path(book))%></td>
     <td><%= link_to("Destroy",book_path(book),method: :delete,"data-confirm" => "Are you sure？")%></td>
 </tr>
  <% end %>
</tbody>

</table>