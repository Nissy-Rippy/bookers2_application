 <%= render "books/list",book:@book,user:@user %>
<div class="col-md-8 offset-md-1">

 <h1>Books</h1>

 <table class="table table-hover table-border table-inverse">

   <thead>
    <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
    <th></th>
    </tr>
   </thead>

 <% @books.each do |book|%>
<tbody>

 <tr>
      <td>
      <%= link_to user_path(book.user) do%>
      <%= attachment_image_tag book.user, :profile_image, :fill,30,30,fallback: "no_image.jpg",size: "30x30" %>
      <% end %>
      </td>
      <td><%= link_to book.title,book_path(book.id) %></td>
      <td><%= book.body %></td>
      <td><div class="favorite-btn_<%= book.id %>"><%= render partial: "favorites/favorite-btn",locals: {book: book} %></div></td>
      <td class="coment-count_<%= @book.id %>">コメント数:<%= book.post_coments.count %></td>
 </tr>

</tbody>
  <% end %>
</table>
   </div>
 </div>
</div>

