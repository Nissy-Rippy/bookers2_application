
<%= render "books/list",book:@book,user:@user %>

<div class="col-md-8 offset-md-1">

 <h1>Books</h1>

 <table class="table table-hover table-border table-inverse">

 <thead>
     <tr>
       <th width="200"></th>
       <th width="200">Title</th>
       <th>Opinion</th>
       <th colspan="6"></th>
     </tr>
 </thead>

<tbody>
  <tr>
   <% @books.each do |book| %>
     <td><%= link_to do %>
     <%= attachment_image_tag @user,:profile_image ,fallback: "no_image.jpg",size: "40x40" %></td>
     <% end %>
     <td ><%= link_to book.title,book_path(book) %></td>
     <td><%= book.body %></td>
     <td></td>
     <td></td>
   </tr>
   <% end %>
</tbody>

</table>

</div>
</div>
</div>