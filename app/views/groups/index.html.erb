<%= render "books/list",user:@user,book:@book %>
<div class="col-md-8 offset-md-1">

 <h1>Groups</h1>
 <table class="table table-hover table-border table-inverse">
   <thead>
    <tr>
    <th></th>
    <th>グループ名</th>
    <th>紹介文</th>
    <th>メンバー数</th>
    <th colspan="3"></th>
    </tr>
   </thead>
      <% @groups.each do |group|%>
   <tbody>
     <tr height="50">
      <td><%= attachment_image_tag group,:image,:fill,30,30,format: "jpg", fallback: "no_image.jpg", size:"30x30" %></td>
      <td><%= link_to group.name,group_path(group.id) %></td>
      <td><%= group.introduction %></td>
      <td><%= group.group_users.count %>名 </td>
      <% if group.owner_id == current_user.id %>
      <td><%= link_to "Edit",edit_group_path(current_user.id),class: "btn btn-success" %></td>
      <% end %>
     </tr>
   </tbody>
     <% end %>
   </table>

  </div>
 </div>
</div>